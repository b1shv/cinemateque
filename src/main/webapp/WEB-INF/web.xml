<web-app>

  <servlet>
    <servlet-name>GenreServlet</servlet-name>
    <servlet-class>ru.aston.servlet.GenreServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GenreServlet</servlet-name>
    <url-pattern>/genres</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>GenreServlet</servlet-name>
    <url-pattern>/genres/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PersonServlet</servlet-name>
    <servlet-class>ru.aston.servlet.PersonServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PersonServlet</servlet-name>
    <url-pattern>/persons</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>PersonServlet</servlet-name>
    <url-pattern>/persons/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FilmServlet</servlet-name>
    <servlet-class>ru.aston.servlet.FilmServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>FilmServlet</servlet-name>
    <url-pattern>/films</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>FilmServlet</servlet-name>
    <url-pattern>/films/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>MainFilter</filter-name>
    <filter-class>ru.aston.servlet.MainFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>MainFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>

</web-app>
